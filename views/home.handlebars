<div class="container">
    <div class="col-md-12">
        <div class="jumbotron jumbotron-fluid">
            <h1 class="display-4">News Blast!</h1>
            <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its parent.</p>
            
            <form action="/savedarticles" method="GET">
                <button type="button" class="btn btn-primary">Saved Articles</button>
            </form>
            <form action="/scraped" method="GET">
                <button type="submit" class="btn btn-warning">Scraped Articles</button>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <div class="display-articles">
        {{#each db_headlines}}
        <div class="row">
            <div class="col-10">
                <h3><a href={{this.link}}>{{this.title}}</a></h3>
                <p>{{this.summary}}</p>
            </div>

        </div>
        {{/each}}

    </div>

</div>