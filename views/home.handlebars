<div class="container">
    <div class="col-md-12">
        <div class="jumbotron jumbotron-fluid">
            <h1 class="display-4">News Blast!</h1>
            <p class="lead">Bringing anything relating to Oceannews in science and technology to you.</p>
            <form action="/savedarticles" method="GET">
                <button type="submit" class="btn btn-primary">Saved Articles</button>
            </form>
            <form action="/scraped" method="GET">
                <button type="submit" class="btn btn-warning">Scraped Articles</button>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <div class="col-md-12">
        <div class="display-articles">
            {{#each db_headlines}}
                <div class="row">
                    <div class="col-10">
                        <h3><a href="https://www.oceannews.com{{this.link}}" target="_blank">{{this.title}}</a></h3>
                        <p>{{this.summary}}</p>
                            <button type="submit" class="btn btn-primary" id="saveBtn-{{this.id}}">Save</button>                        
                        <script>
                            $("#saveBtn-{{this.id}}").on("click", function(req, res){
                                $.ajax({
                                    url: "/savedarticles/{{this.id}}",
                                    method: "POST"
                                })
                            })
                        </script>
                    </div>
                </div>
            {{/each}}
            
        </div>
    </div>  
</div>
